{
  "name": "BookmarksGPT",
  "description": "Organize and search your bookmarks using GPT",
  "version": "1.0",
  "manifest_version": 3,
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "permissions": [
    "tabs",
    "bookmarks",
    "activeTab",
    "storage",
    "notifications",
    "scripting",
    "downloads",
    "unlimitedStorage"
  ],
  "host_permissions": [
    "https://app.posthog.com/",
    "<all_urls>"
  ]
}
